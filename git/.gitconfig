# git config --global http.proxy 'socks5://127.0.0.1:1080'

[user]
    name = liuyinz
    email = cheunghsu@outlook.com

[hub]
    protocol = https

[apply]
    whitespace = nowarn

[core]
	editor = code --wait
    excludesfile = /Users/ray/.gitignore
    autocrlf = input
    pager = less -MR

[http]
    postBuffer = 524288000

[http "https://github.com"]
    proxy = socks5://127.0.0.1:4781
[https "https://github.com"]
    proxy = socks5://127.0.0.1:4781

[credential]
    helper = osxkeychain

[color]
    ui = auto
    diff = auto
    status = auto
    branch = auto

[blame]
    date = short
    coloring = repeatedLines
    blankBoundary = true

[color "blame"]
    repeatedLines = green

[format]
    pretty = %Cred%h%Creset -%C(auto)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset

[log]
    date = short

[diff]
    tool = vscode
[difftool]
    prompt = false
[difftool "vscode"]
    cmd = code --wait --diff $LOCAL $REMOTE

[merge]
    tool = vscode
[mergetool]
    keepBackup = false
    prompt = false
[mergetool "vscode"]
    cmd = code --wait $MERGED

[rerere]
    enabled = true

[filter "lfs"]
    process = git-lfs filter-process
    required = true
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
[pull]
	rebase = false
[advice]
	addEmptyPathspec = false
[commit]
	template = /Users/ray/.gitmessage
