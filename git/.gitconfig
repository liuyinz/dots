# git config --global http.proxy "socks5://$SOCKS"

[apply]
  whitespace = nowarn

[user]
  name = liuyinz
  email = cheunghsu@outlook.com

[core]
    # editor = code --wait
  editor = nvim
  autocrlf = input
    # pager = less -x1,5
  pager = diff-so-fancy | less -x1,5 -RFX
  excludesfile = /Users/ray/.gitignore

[interactive]
	difffilter = diff-so-fancy

[diff-so-fancy]
  useUnicodeRuler = false
  rulerWidth = 67
	stripLeadingSymbols = false

[color]
  ui = true
  diff = auto
  status = auto
  branch = auto

# See https://git-scm.com/docs/git-config#Documentation/git-config.txt-color
[color "diff"]
  meta = yellow bold
  commit = green bold
  frag = blue bold
  old = red bold
  new = green bold
  whitespace = red reverse

[color "diff-highlight"]
  oldNormal = red bold
  oldHighlight = black bold red
  newNormal = green bold
  newHighlight = black bold green

[credential]
  helper = osxkeychain

[commit]
  template = /Users/ray/.gitmessage

[blame]
  date = short
  coloring = repeatedLines
  blankBoundary = true

[color "blame"]
  repeatedLines = green

[format]
  pretty = %Cred%h%Creset%C(auto)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset

[advice]
  addEmptyPathspec = false

[rerere]
  enabled = true

[hub]
  protocol = https

[http]
  postBuffer = 524288000

[http "https://github.com"]
  proxy = socks5://127.0.0.1:4781

[https "https://github.com"]
  proxy = socks5://127.0.0.1:4781

[diff]
  tool = vscode
[difftool]
  prompt = false
[difftool "kkkvs"]
  cmd = code --wait --diff $LOCAL $REMOTE

[merge]
  tool = vscode
[mergetool]
  keepBackup = false
  prompt = false
[mergetool "vscode"]
  cmd = code --wait $MERGED

[filter "lfs"]
  process = git-lfs filter-process
  required = true
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
[pull]
  rebase = false
