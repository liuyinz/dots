#!/usr/bin/env bash

# ;; make sure server running when instance started.
# (add-hook 'after-init-hook (lambda ()
#                              (require 'server)
#                              (unless (daemonp)
#                                (server-start)))))

emacsclient -u --eval '(server-running-p)' 2>/dev/null || emacs --daemon

emacsclient --quiet --no-wait --alternate-editor "" --create-frame "$@"
